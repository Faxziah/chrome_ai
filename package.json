{
  "name": "chrome-ai-text-tools",
  "version": "1.0.0",
  "description": "AI-powered text summarization, rephrasing, translation, and keyword highlighting using Gemini API",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/chrome": "^0.0.270",
    "rollup": "^4.22.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-replace": "^5.0.7",
    "tslib": "^2.8.0",
    "vitest": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "jsdom": "^25.0.0",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.0.0"
  }
}
